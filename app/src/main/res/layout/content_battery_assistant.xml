<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_battery_assistant"
    tools:context=".battery_assistant"
    android:background="#F0F8FF">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="電量"
            android:id="@+id/energy"
            android:layout_below="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold|normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="狀況"
            android:id="@+id/status"
            android:layout_below="@+id/BatteryTemp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold|normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="攝氏"
            android:id="@+id/BatteryT"
            android:layout_alignTop="@+id/textView7"
            android:layout_toLeftOf="@+id/textView7"
            android:layout_toStartOf="@+id/textView7"
            android:textStyle="bold|normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="電量:"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/BatteryV"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="健康:"
            android:id="@+id/textView8"
            android:layout_above="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="狀況:"
            android:id="@+id/textView9"
            android:layout_above="@+id/imageView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="溫度:"
            android:id="@+id/textView10"
            android:layout_above="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="健康"
            android:id="@+id/BatteryTemp"
            android:layout_below="@+id/BatteryV"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold|normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="華氏"
            android:id="@+id/BatteryT2"
            android:layout_below="@+id/energy"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold|normal" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#00ccff"
            android:id="@+id/imageView2"
            android:layout_marginTop="10dp"
            android:layout_alignRight="@+id/btn_facebook_share"
            android:layout_alignEnd="@+id/btn_facebook_share"
            android:layout_below="@+id/status"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="電壓:"
            android:id="@+id/textView5"
            android:layout_above="@+id/textView8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="電壓"
            android:id="@+id/BatteryV"
            android:layout_below="@+id/BatteryT2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textStyle="bold|normal" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_facebook_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#3b5998"
            fancy:fb_focusColor="#5577bd"
            fancy:fb_fontIconResource="@string/icon_share"
            fancy:fb_fontIconSize="25sp"
            fancy:fb_textSize="22dp"
            fancy:fb_iconPosition="right"
            fancy:fb_iconPaddingLeft="20dp"
            fancy:fb_iconPaddingRight= "0dp"
            fancy:fb_radius="30dp"
            fancy:fb_text="電 池 使 用 情 況"
            fancy:fb_textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#00ccff"
            android:id="@+id/imageView3"

            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/btn_facebook_share"
            android:layout_alignStart="@+id/btn_facebook_share"
            android:layout_below="@+id/btn_facebook_share"
            android:layout_alignRight="@+id/btn_facebook_share"
            android:layout_alignEnd="@+id/btn_facebook_share" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_facebook_share2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#3b5998"
            fancy:fb_focusColor="#5577bd"
            fancy:fb_fontIconResource="@string/icon_share"
            fancy:fb_fontIconSize="25sp"
            fancy:fb_iconPosition="right"
            fancy:fb_iconPaddingLeft="20dp"
            fancy:fb_iconPaddingRight= "0dp"
            fancy:fb_radius="30dp"
            fancy:fb_text="電 池 通 知 欄     "
            fancy:fb_textSize="22dp"
            android:layout_marginTop="10dp"
            fancy:fb_textColor="#FFFFFF"
            android:layout_below="@+id/imageView3"
            android:layout_alignRight="@+id/imageView3"
            android:layout_alignEnd="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#00ccff"
            android:id="@+id/imageView6"
            android:layout_alignRight="@+id/btn_facebook_share2"
            android:layout_alignEnd="@+id/btn_facebook_share2"
            android:layout_below="@+id/btn_facebook_share2"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/btn_facebook_share2"
            android:layout_alignStart="@+id/btn_facebook_share2"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_facebook_share3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#3b5998"
            fancy:fb_focusColor="#5577bd"
            fancy:fb_fontIconResource="@string/icon_share"
            fancy:fb_fontIconSize="25sp"
            fancy:fb_iconPosition="right"
            fancy:fb_iconPaddingLeft="20dp"
            fancy:fb_iconPaddingRight= "0dp"
            android:layout_marginTop="10dp"
            fancy:fb_radius="30dp"
            fancy:fb_text="電 池 過 熱 提 醒"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="22dp"
            android:onClick="notification_switch"
            android:layout_below="@+id/imageView6"
            android:layout_alignRight="@+id/imageView6"
            android:layout_alignEnd="@+id/imageView6"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#00ccff"
            android:id="@+id/imageView7"
            android:layout_marginTop="10dp"
            android:layout_alignLeft="@+id/btn_facebook_share3"
            android:layout_alignStart="@+id/btn_facebook_share3"
            android:layout_below="@+id/btn_facebook_share3"
            android:layout_alignRight="@+id/btn_facebook_share3"
            android:layout_alignEnd="@+id/btn_facebook_share3" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_facebook_share4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="#3b5998"
            fancy:fb_focusColor="#5577bd"
            fancy:fb_fontIconResource="@string/icon_share"
            fancy:fb_fontIconSize="25sp"
            fancy:fb_iconPosition="right"
            fancy:fb_iconPaddingLeft="20dp"
            fancy:fb_iconPaddingRight= "0dp"
            fancy:fb_radius="30dp"
            android:layout_marginTop="10dp"
            fancy:fb_text="使 用 說 明         "
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="22dp"
            android:layout_below="@+id/imageView7"
            android:layout_alignRight="@+id/imageView7"
            android:layout_alignEnd="@+id/imageView7"
            android:layout_alignLeft="@+id/imageView7"
            android:layout_alignStart="@+id/imageView7" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="#00ccff"
            android:id="@+id/imageView8"
            android:layout_alignRight="@+id/btn_facebook_share4"
            android:layout_alignEnd="@+id/btn_facebook_share4"
            android:layout_below="@+id/btn_facebook_share4"
            android:layout_alignLeft="@+id/btn_facebook_share4"
            android:layout_alignStart="@+id/btn_facebook_share4" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="#00ccff"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="/"
            android:id="@+id/textView7"
            android:layout_below="@+id/energy"
            android:layout_toLeftOf="@+id/BatteryT2"
            android:layout_toStartOf="@+id/BatteryT2"
            android:textStyle="bold|normal" />


    </RelativeLayout>

</LinearLayout>

