<?xml version="1.0" encoding="utf-8"?>
     <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:padding="10dp"
         android:background="#282828">

         <ImageView
             android:id="@+id/imageNo"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="1dp"
             />

        <TextView
             android:id="@+id/titleNo"
             android:text="標題"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_toRightOf="@id/imageNo"
            android:layout_marginLeft="1dp"
            android:textColor="#00F5FF"/>
         <TextView
             android:id="@+id/textNo1"
             android:text="電量"
             android:textColor="#FFFFFF"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/titleNo"
             android:layout_marginLeft="1dp"
             android:layout_toRightOf="@id/imageNo" />
        <TextView
            android:id="@+id/textNo2"
            android:text="溫度"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleNo"
            android:layout_toRightOf="@+id/titleNo"
            android:layout_toEndOf="@+id/titleNo" />

</RelativeLayout>
